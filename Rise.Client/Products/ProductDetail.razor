@page "/product/{id:int}"
@using Rise.Client.Products.Components
@using Rise.Client.Orders.Components

<PageTitle>360° Zorg | @product?.Name</PageTitle>
<div class="container my-3">
    @if (product == null)
    {
        <p>Loading product details...</p>
    }
    else
    {
        <button class="btn btn-dark" @onclick="NavigateBack">Naar overzicht</button>
        <div class="row mt-4">
            <Detailkaart Product=@product />
            @if (!product.Reusable)
            {
                @if (Winkelmand.Items.Count > 0)
                {
                    <div class="col-12 col-xl-6 mb-4">
                        <div class="card d-flex flex-column">
                            <div class="card-body">
                                <h2 class="card-title pb-1">Overzicht</h2>
                                @foreach (var item in Winkelmand.Items)
                                {
                                    <Overzichtlijn Lijn=@item />
                                }
                                <div class="text-end mt-4">
                                    <button class="btn btn-dark" @onclick="PlaatsBestelling">Uitscannen bevestigen</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            }
        </div>
    }
</div>