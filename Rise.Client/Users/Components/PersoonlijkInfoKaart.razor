<div class="row">
    <div class="col p-2">
        <div class="card">
            <div class="card-header px-4">
                <b style="font-size: 20px;">Persoonlijke info</b>
            </div>
            <div class="card-body d-flex flex-column p-4">
                <div class="row">
                    <div class="col">
                        <p class="d-block"><b>Voornaam:</b></p>
                        <p class="d-block"><b>Naam:</b></p>
                        <p class="d-block"><b>Email:</b></p>
                    </div>
                    <div class="col text-end">
                        <p>@Voornaam</p>
                        <p>@Naam</p>
                        <p>@Email</p>
                    </div>
                </div>
                <form>
                    <div class="form-group pb-3">
                        <label for="newPassword">Nieuw wachtwoord</label>
                        <div class="col-md-6">
                            <input type="password" class="form-control" id="newPassword"
                                   placeholder="Geef uw nieuw wachtwoord in">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="repeatPassword">Herhaal wachtwoord</label>
                        <div class="col-md-6 pb-3">
                            <input type="password" class="form-control" id="repeatPassword"
                                   placeholder="Herhaal uw nieuw wachtwoord">
                        </div>
                    </div>
                    <button class="btn btn-dark" style="width: auto;">Wachtwoord wijzigen</button>
                </form>
            </div>
        </div>
    </div>
</div>

